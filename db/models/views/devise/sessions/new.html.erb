<%= stylesheet_link_tag 'authorization', :media => 'screen' %>
<section class="content">  
  <h2>Sign in</h2>
  <%= image_tag("world.jpg", :alt => "Sample App", :id => "world") %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.label :email %><br />
    <%= f.email_field :email %><br />
  
    <%= f.label :password %><br />
    <%= f.password_field :password %><br />
  
    <%= f.submit "Sign in" %>
  
    <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %> <%= f.label :remember_me %>
    <% end -%>
    
<% end %>
<div id="links"><%= render :partial => "devise/shared/links" %></div>
</section>