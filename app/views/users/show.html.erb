<% content_for :stylesheets do %>
  <%= stylesheet_link_tag 'main_styles/home' %>
<% end %>
<% content_for :javascripts do %>
  <%= javascript_include_tag "microposts.js" %>
<% end %>

  <%= image_tag user.profile.avatar.url(:thumb), :id => "avatar" %>
  
<%= form_for current_user, :html => { :multipart => true } do |f| %>
  <%= f.fields_for :profile do |p| %>
    <%= p.file_field :avatar %>
  <% end %>
    <%= f.submit %>
<% end %>

<% if user.id == current_user.id %>
  <%= render "edit_profile" %>
<% else %>
  <%= render "profile", :profile => user.profile %>
<% end %>
<%= render "microposts" %>