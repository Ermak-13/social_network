<% content_for :stylesheets do %>
  <%= stylesheet_link_tag 'main_styles/home' %>
<% end %>
<% content_for :javascripts do %>
  <%= javascript_include_tag "microposts.js","avatar.js" %>
<% end %>

<%= render "avatar" %>

<% if user.id == current_user.id %>
  <%= render "edit_profile" %>
<% else %>
  <%= render "profile", :profile => user.profile %>
<% end %>
<%= render "microposts" %>